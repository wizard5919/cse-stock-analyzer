# =============================================
# CSE Stock Analyzer - Environment Configuration
# =============================================

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration (Future use)
MONGODB_URI=mongodb://localhost:27017/cse_stock_analyzer
REDIS_URL=redis://localhost:6379

# Authentication (Future use)
JWT_SECRET=your_jwt_secret_key_here_make_it_very_long_and_complex_at_least_64_characters
JWT_EXPIRES_IN=7d

# API Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CACHE_DURATION_MINUTES=5
UPDATE_INTERVAL_MINUTES=*/2

# Market Hours (Morocco Time - GMT+1)
MARKET_OPEN_HOUR=9
MARKET_OPEN_MINUTE=30
MARKET_CLOSE_HOUR=15
MARKET_CLOSE_MINUTE=20

# Data Sources
CSE_PRIMARY_URL=https://www.casablanca-bourse.com
CSE_SECONDARY_URL=https://medias24.com/api
API_TIMEOUT_MS=10000

# Email Configuration (Optional - for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Logging
LOG_LEVEL=info

# Features Flags
ENABLE_WEBSOCKETS=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true

# Development Options
DEBUG_MODE=false
MOCK_DATA=true
