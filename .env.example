# =============================================
# CSE Stock Analyzer - Environment Configuration
# =============================================

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/cse_stock_analyzer
REDIS_URL=redis://localhost:6379

# Authentication (Future use)
JWT_SECRET=your_jwt_secret_key_here_make_it_very_long_and_complex_at_least_64_characters_long_for_security
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# API Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CACHE_DURATION_MINUTES=5
UPDATE_INTERVAL_MINUTES=*/2

# Market Hours (Morocco Time - GMT+1)
MARKET_OPEN_HOUR=9
MARKET_OPEN_MINUTE=30
MARKET_CLOSE_HOUR=15
MARKET_CLOSE_MINUTE=20

# Data Sources
CSE_PRIMARY_URL=https://www.casablanca-bourse.com
CSE_SECONDARY_URL=https://medias24.com/api
API_TIMEOUT_MS=10000
MAX_RETRIES=3

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=25000
WS_HEARTBEAT_TIMEOUT=5000
MAX_WS_CONNECTIONS=1000

# Email Configuration (Optional - for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
FROM_EMAIL=noreply@cse-analyzer.com
FROM_NAME=CSE Stock Analyzer

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
ENABLE_CONSOLE_LOG=true

# Security Configuration
CORS_ORIGIN=http://localhost:3000
COOKIE_SECRET=your_cookie_secret_here_make_it_long_and_secure
SESSION_SECRET=your_session_secret_here_also_make_it_very_secure
TRUSTED_PROXIES=127.0.0.1,::1

# Features Flags
ENABLE_WEBSOCKETS=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_COMPRESSION=true
ENABLE_MORGAN_LOGGING=true
ENABLE_HELMET_SECURITY=true

# Development Options
DEBUG_MODE=false
MOCK_DATA=true
ENABLE_SWAGGER=true
ENABLE_CORS_DEBUG=false

# External API Keys (if needed)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
FINNHUB_API_KEY=your_finnhub_key_here
NEWS_API_KEY=your_news_api_key_here

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=cse-analyzer-storage

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here
MIXPANEL_TOKEN=your_mixpanel_token_here

# Docker Configuration
COMPOSE_PROJECT_NAME=cse-stock-analyzer
COMPOSE_FILE=docker-compose.yml

# SSL Configuration (Production)
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem
ENABLE_HTTPS=false

# Performance Configuration
MAX_REQUEST_SIZE=10mb
MAX_JSON_SIZE=10mb
MAX_URL_ENCODED_SIZE=10mb
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Notification Configuration
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
ENABLE_ERROR_NOTIFICATIONS=false
ENABLE_DEPLOYMENT_NOTIFICATIONS=false

# Testing Configuration
TEST_DATABASE_URL=mongodb://localhost:27017/cse_test
TEST_REDIS_URL=redis://localhost:6379/1
ENABLE_TEST_FIXTURES=true

